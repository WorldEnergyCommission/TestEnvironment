{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387

  // To use api debugging you need to open the api path in separate vscode to match workspaceRoot
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Delve into Docker",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "substitutePath": [
        {
          "from": "${workspaceRoot}",
          "to": "/app"
        }
      ],
      "port": 4001,
      "host": "127.0.0.1",
      "showLog": true,
      "apiVersion": 2,
      "trace": "verbose"
    },
    {
      "name": "Launch API locally",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}"
    }
  ]
}
